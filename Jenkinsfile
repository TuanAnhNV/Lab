pipeline {
    agent any

    stages("build") {
        steps {
            echo 'build the application...'
        }
    }

    stages("test") {
        steps {
        echo 'testing the application'}
    }

    stages("deploy"){

        steps {
        echo 'deploy the application...'
        }
    }

    stages("end"){
        steps {
        echo 'deploy the application...'
        }
    }

}