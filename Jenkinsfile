pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build the application...'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the application...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy the application...'
            }
        }

        stage('End') {
            steps {
                echo 'Finished pipeline.'
            }
        }
    }
}